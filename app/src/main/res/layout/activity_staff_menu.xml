<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".staff.StaffMenu">

    <RelativeLayout
        android:id="@+id/topRow"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/welcomeTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/welcomeHeader"
            android:textSize="30sp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/userTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Administrator"
            android:textSize="25sp"
            android:layout_below="@id/welcomeTV"
            android:gravity="center"
            android:textStyle="bold"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_below="@id/topRow"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        >

        <Button


            android:id="@+id/addServiceButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Add Service"
            android:backgroundTint="@color/StudioXPink"
            />

        <Button
            android:id="@+id/addEventButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/scheduleButton"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Add Event"
            android:backgroundTint="@color/StudioXPink"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/firstRow"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addNews"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="ADD NEWS"
            android:backgroundTint="@color/StudioXPink"
            />


        <Button
            android:id="@+id/reportButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Report"
            android:backgroundTint="@color/StudioXPink"
            />



    </LinearLayout>


</RelativeLayout>