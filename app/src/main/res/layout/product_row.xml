<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp">

    <ImageView
        android:id="@+id/serviceImage"
        android:backgroundTint="@color/Transparent"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/product_image" />

    <TextView
        android:id="@+id/serviceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/serviceImage"
        android:fontFamily="sans-serif-light"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/servicePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_toEndOf="@id/serviceImage"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/serviceTitle"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        />

    <TextView
        android:id="@+id/datePurchaseTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/date_of_purchase"
        android:textAlignment="center"
        android:layout_below="@id/servicePrice"
        android:layout_toEndOf="@id/serviceImage"
        />
    <TextView

        android:id="@+id/servicePurchaseDate"
        android:layout_toEndOf="@id/serviceImage"
        android:layout_below="@id/datePurchaseTV"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="match_parent"/>


</RelativeLayout>