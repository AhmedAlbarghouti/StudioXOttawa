<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".staff.AddEvent">

    <TextView
        android:id="@+id/add_Product_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="@string/new_event"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_product_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/add_Product_title"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:hint="@string/fitness_hint" />

    <ImageButton
        android:id="@+id/new_product_image"
        android:src="@drawable/ic_baseline_date_range_24"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/new_product_name"
        />

    <TextView
        android:id="@+id/newEventDateTV"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/new_product_name"
        android:layout_toRightOf="@id/new_product_image"
        android:gravity="center"
        android:text="@string/no_date"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/new_product_price"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/new_product_image"
        android:gravity="center"
        android:hint="@string/time_hint" />

    <Button
        android:id="@+id/AddProductBtn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/new_product_price"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/StudioXPink"
        android:text="@string/create_event" />

</RelativeLayout>