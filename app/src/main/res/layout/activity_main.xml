<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

<ImageSwitcher
    android:id="@+id/photoSwitcher"
    android:layout_width="match_parent"
    android:layout_height="200dp"

/>
        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/photoSwitcher"
            android:orientation="horizontal"
            >

            <Button


                android:id="@+id/scheduleButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Schedule"
                />

            <Button
                android:id="@+id/servicesButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/scheduleButton"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Services"
                />
        </LinearLayout>


        <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/firstRow"
        android:orientation="horizontal">


        <Button
            android:id="@+id/vodsButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Video On Demand"


            />

        <Button
            android:id="@+id/newsButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/scheduleButton"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="News"
            />

        </LinearLayout>


    <LinearLayout
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/secondRow"
        android:orientation="horizontal">

        <Button
            android:id="@+id/contactButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Contact Us"


            />

        <Button
            android:id="@+id/aboutusButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/scheduleButton"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="About Us"
            />




    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:id="@+id/generateReport"/>



</RelativeLayout>