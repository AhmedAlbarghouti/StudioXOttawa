<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/CheckoutStudioXLogo"
        android:scaleType="fitXY"
        android:src="@drawable/logo_studioxottawa"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summaryOfPurchase"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textColorHint="@color/white"
        android:layout_below="@id/CheckoutStudioXLogo"
        android:textColor="@color/white"
        android:layout_above="@id/ItemPurchView"
        android:layout_marginBottom="10dp"
        android:text="@string/purchaseSummary"/>

    <com.stripe.android.view.CardInputWidget
        android:id="@+id/cardInputWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-light"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_above="@id/payButton"
        android:layout_marginRight="20dp"/>
    <Button
        android:text="@string/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payButton"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:backgroundTint="@color/StudioXPink"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CheckoutStudioXLogo"
        android:layout_above="@id/amountText"
        android:id="@+id/ItemPurchView"/>

    <TextView
        android:id="@+id/labelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cardInputWidget"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="147dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/amount"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountText"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_above="@id/cardInputWidget"
        android:text="0.00"
        android:layout_toRightOf="@+id/labelText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbol"
        android:layout_toRightOf="@+id/amountText"
        android:layout_above="@id/cardInputWidget"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="10sp"
        android:fontFamily="sans-serif-light"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:text="$"
        />


</RelativeLayout>